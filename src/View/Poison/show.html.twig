{% extends 'layout.html.twig' %}

{%  block content %}
    <div class="d-flex flex-wrap justify-content-center mt-4">
        <div class="d-flex flex-column align-items-center">
            <div class="card m-3 shadow p-3 mb-5 rounded poison-card">
                <div class="card-header text-center">{{ poisonInformations.name }}</div>
                <div class="card-body p-0 mt-3">
                    <img src="/assets/images/poisons/{{ poisonInformations.image }}" alt="picture of {{ poisonInformations.name }}" style="width: 100%">
                </div>
            </div>
            <div class="card mb-4 shadow p-3 mb-5 rounded poison-show">
                <div class="card-body">
                    <h5 class="card-title text-center">Poison description</h5>
                    <p class="card-text">{{  poisonInformations.description }}</p>
                </div>
            </div>
        </div>
        <div class="d-flex flex-column align-items-center pt-3 sm ml-5">
            <div class="card mb-3 shadow mb-5 rounded poison-show">
                <div class="card-body">
                    <h5 class="card-title text-center">Symptoms</h5>
                    <ul class="list-group list-group-flush">
                        {% for poisonSymptom in poisonSymptoms %}
                            <li class="list-group-item symptom border-0">{{ poisonSymptom.name | capitalize}}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% if not poisonInformations.antidote %}
                <div class="card shadow p-3 mb-5 rounded poison-show">
                    <div class="card-body text-center ">
                        <h5 class="card-title">There is any antidote for this poison</h5>
                        <button type="button" class="btn btn-outline-success">Create the antidote</button>
                    </div>
                </div>
            {% else %}
                <div class="card shadow p-3 mb-5 rounded poison-show">
                    <div class="card-body">
                        <h5 class="card-title text-center">Antidote description</h5>
                        <ul class="list-group list-group-flush">
                            {% for cureInformation in cureInformations %}
                                <li class="list-group-item symptom border-0 pl-0">{{ cureInformation.name}}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}